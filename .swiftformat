# file options

--exclude Carthage,Pods,Tests/Mocks/*.generated.swift

# format options

--allman false
--commas always
--elseposition same-line
--header ignore
--ifdef indent
--indent 2
--importgrouping testable-bottom
--linebreaks lf
--maxwidth 200
--operatorfunc spaced
--patternlet hoist
--ranges spaced
--self remove
--semicolons inline
--stripunusedargs closure-only
--swiftversion 6.0
--trimwhitespace always
--wraparguments preserve
--wrapcollections preserve
--typeblanklines remove

# rules

--disable strongOutlets, docComments
--enable isEmpty,blockComments,wrapMultilineFunctionChains,environmentEntry,privateStateVariables
